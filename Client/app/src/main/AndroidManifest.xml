        <activity
            android:name="com.example.foodzoneclient.ui.MainScreenActivity"
            android:exported="true" >
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
        <activity
            android:name="com.example.foodzoneclient.ui.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.example.foodzoneclient.ui.CartActivity"
            android:exported="false" />
        <activity
            android:name="com.example.foodzoneclient.ui.ChangeRecipientActivity"
            android:exported="false" />
        <activity
            android:name="com.example.foodzoneclient.ui.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts"/>

        <meta-data
            android:name="CLOUDINARY_URL"
            android:value="cloudinary://@djakelvti"/>
    </application>

</manifest>