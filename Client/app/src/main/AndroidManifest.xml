        android:supportsRtl="true"
        android:theme="@style/Theme.FoodZoneClient">
        <activity
            android:name="com.example.foodzoneclient.ui.HistoryActivity"
            android:exported="false" />
        <activity
            android:name="com.example.foodzoneclient.ui.FoodMenuActivity"
            android:exported="false" />
        <activity
            android:name="com.example.foodzoneclient.ui.OrderActivity"
            android:exported="false" />
        <activity
            android:name="com.example.foodzoneclient.ui.SearchActivity"
            android:exported="false" />
        <activity
            android:name="com.example.foodzoneclient.ui.SuccessScreenActivity"
            android:exported="false" />
